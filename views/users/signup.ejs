<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1>Signup On Our Platform</h1>

        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">

                <label  for="username" class="from-label"> Username : </label>
                <input type="text" name="username" placeholder="Enter Your Username : " 
                id="username" class="form-control" required><br>

                <label  for="password" class="from-label"> Password : </label>
                <input type="password" name="password" placeholder="Enter Your password : " 
                id="password" class="form-control" required><br>

                <label  for="email" class="from-label"> Email : </label>
                <input type="email" name="email" placeholder="Enter Your Email ID : " 
                id="email" class="form-control" required><br>

                <label  for="dateOfBirth" class="from-label"> Date Of Birth : </label>
                <input type="date" name="dateOfBirth" placeholder="Enter Your DOB ID : "
                id="date" class="form-control" required><br>

                <label  for="address" class="from-label"> Address : </label>
                <input type="email" name="address" placeholder="Enter Your Address : "
                id="address" class="form-control" required><br>

                <label  for="phoneNo" class="from-label"> Email : </label>
                <input type="number" name="phoneNo" placeholder="Enter Your Phone No : " 
                id="phoneNO" class="form-control" required><br>

                <label  for="profile" class="from-label"> Profile : </label>
                <input type="image" name="profile" placeholder="Select Your Profile Photo : " 
                id="profile" class="form-control" required><br>

                <button class="btn btn-success">Sign Up</button>
            </div>
        </form>

    </div>
</div>
<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1>Signup On Our Platform As A Mentor</h1>

        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">

                <label  for="domain" class="from-label"> Domain : </label>
                <input type="text" name="domain" placeholder="Select Your Domain : "
                id="domain" class="form-control" required><br>

                <label  for="experience" class="from-label"> Experience : </label>
                <input type="text" name="domain" placeholder="Enter Your Experience : "
                id="domain" class="form-control" required><br>

                <label for="offlineCenter" class="from-label"> Offline Center Address : </label>
                <input type="text" name="domain" placeholder="Enetr The Address Of Your Offline Center : "
                id="domain" class="form-control" required><br>

                <button class="btn btn-success">Sign Up</button>
            </div>
        </form>

    </div>
</div>